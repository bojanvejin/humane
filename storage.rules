rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /masters/{allPaths=**} {
      allow read: if false; // Masters are private
      allow write: if request.auth != null; // Only authenticated users can upload masters
    }
    match /hls/{allPaths=**} {
      allow read: if true; // DEV ONLY; tighten with signed URLs/CDN later
      allow write: if false; // only pipeline
    }
    // Deny all other storage operations by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}